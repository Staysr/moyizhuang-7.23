@import '../../styles/driver.wxss';
  .total-looking{
    background: #fff;
   width: 710rpx;
    height: 87rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   border-bottom: 1px solid #f5f5f5;
}
.looking-desc{
  margin-left: 10rpx;
    font-size: 26rpx;
    opacity: .5;
}
.total-prompt{
    background: #fff;
    width: 710rpx;
    height: 87rpx;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #f5f5f5;
    color: rgba(0, 0, 0, .5);
    text-align: center;
}
.prompt-time{
    color: #fc9153;
    display: inline;
}
.ft{
    position: absolute;
    height: 88rpx;
    width: 710rpx;
   top: 800rpx;
    display: flex;
    align-items: center;
   color: rgba(0, 0, 0, .6);
    background: #fff;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 260rpx;
    box-shadow:3px 5px 10px #e0e0e0; 
   box-sizing: border-box
}
.ft-cancel{
    width: 235rpx;
    text-align: center;
    border-right: 1px solid #f5f5f5;
 
}
.ft-help{
    width: 235rpx;
    text-align: center;
    border-right: 1px solid #f5f5f5;
   
}
.ft-app{
   
    text-align: center;
}
.looking-img{
    animation:  loading 1s linear infinite;
}
@keyframes loading {
    0% {
        transform: rotate(0)
    }
   
    50% {
        transform: rotate(180deg)
    }
   
    100% {
        transform: rotate(360deg)
    }
}

  .didiMap{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }