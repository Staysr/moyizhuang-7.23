/* pages/finder/index.wxss */

/**index.wxss**/

@import "../../templates/wxSearch/wxSearch.wxss";

.page {
  min-height: 100%;
}

.container {
  min-height: 100%;
}

.introduced {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}

.introduced .introudced-img {
  width: 175rpx;
  height: 56rpx;
  margin: auto;
}

.introduced .introduced-text {
  font-size: 32rpx;
}

.search-view {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  background: gray;
  display: flex;
  flex-direction: column;
}

.serarch-content {
  position: fixed;
  top: 0;
  z-index: 501;
  width: 100%;
  height: 70rpx;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-icon-view{
  width:70rpx;
  height:70rpx;
  background-color:white;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.search-icon {
  margin-left: 15rpx;
}

.search-input {
  width: 450rpx;
  height: 70rpx;
  font-size: 28rpx;
  background-color: white;
}

.search-btn {
  width: 130rpx;
  height: 70rpx;
  margin-left: 0;
  background-color: blueviolet;
  font-size: 28rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
}

.coupons {
  width: 100%;
  height: auto;
  background-color: #efefef;
}

.coupons-item {
  width: 350rpx;
  height: 200rpx;
  margin-top: 10rpx; /*8rpx*/
  margin-left: 15rpx; /*5rpx*/
  margin-right: 5rpx;
  background: url(https://cdn.it120.cc/apifactory/2017/11/27/cf42314eac4e69e2498d303945636994.png) 0 0 no-repeat;
  background-size: 350rpx 200rpx;
  background-color: white; /*#f1a83b*/
  box-sizing: content-box;
  font-size: 20rpx;
  line-height: 35rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.coupons-date-money {
  width: 350rpx;
  height: 150rpx;
  display: inline-flex;
  flex-direction: row;
}

.coupons-date-money .coupons-info {
  width: 230rpx;
  height: 150rpx;
  padding-top: 40rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: block;
  white-space: pre-line;
  text-align: center;
  color: black;
}

.coupons-date-money .coupons-money {
  width: 120rpx;
  height: 120rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: center;
  color: yellow;
}

.coupons-name {
  width: 350rpx;
  height: 45rpx;
  padding-top: 10rpx;
  text-align: center;
  font-size: 32rpx;
  letter-spacing: 12rpx;
  color: #666;
}

.more-things {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
