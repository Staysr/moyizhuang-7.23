/* index.wxss */
@import "../../templates/goods-item/index.wxss";
@import "../../templates/wxSearch/wxSearch.wxss";

page {
  min-height: 100%;
}

.content {
  min-height: 100%;
}

.search-view {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  background: gray;
  display: flex;
  flex-direction: column;
}

.serarch-content {
  position: fixed;
  top: 0;
  z-index: 501;
  background: #69C3AA;
  width: 100%;
  height: 70rpx;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

