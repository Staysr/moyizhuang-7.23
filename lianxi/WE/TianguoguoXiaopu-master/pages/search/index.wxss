.search-icon-view{
  width:70rpx;
  height:70rpx;
  background-color:white;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.search-icon {
  margin-left: 15rpx;
}

.search-input {
  width: 450rpx;
  height: 70rpx;
  font-size: 28rpx;
  background-color: white;
}

.search-btn {
  width: 130rpx;
  height: 70rpx;
  margin-left: 0;
  background-color: blueviolet;
  font-size: 28rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
}

.list-bottom {
  height: 100rpx;
}

.no-more-goods {
  margin-top: 150rpx;
  margin-bottom: 50rpx;
  background-color: greenyellow;
}

.load-more-goods {
  text-align: center;
  font-size: 30rpx;
  width: 380rpx;
  height: 60rpx;
}
