.cdlist-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
  padding-bottom: 100rpx;
}

.cdlist-focus {
  position: relative;
}

.focus-body {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 5;
}

.focus-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx 50rpx;
  color: #fff;
}

.focus-text {
  width: 85%;
}

.focus-tit {
  height: 72rpx;
  font-size: 48rpx;
  white-space: nowrap;
}

.focus-desc {
  font-size: 28rpx;
}

.focus-play {
  position: relative;
  flex: 0 0 84rpx;
  width: 84rpx;
  height: 84rpx;
  margin-left: 20rpx;
  border: solid 6rpx;
  border-radius: 999px;
}

.focus-play::before {
  content: "";
  position: absolute;
  top: 26rpx;
  left: 34rpx;
  height: 0;
  width: 0;
  line-height: 999em;
  overflow: hidden;
  border-color: transparent transparent transparent currentColor;
  border-width: 18rpx 30rpx;
  border-style: solid;
}

/* bg*/

.focus-bg {
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
}

.focus-bg::after {
  content: "";
  display: block;
  padding-top: 100%;
}

.focus-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  background-image: -webkit-linear-gradient(top, transparent, #000 80%);
}

.focus-gradient::after {
  content: "";
  display: block;
  padding-top: 60%;
}

/*歌曲列表*/

.border_b {
  position: relative;
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
}

.border_t {
  position: relative;
  border-top: 1px solid rgba(255, 255, 255, 0.15);
}

.border_b:after, .border_t:after {
  content: "";
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.songlist-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 20rpx;
  padding-right: 30rpx;
  height: 120rpx;
}

.songlist-title, .songlist-desc {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.songlist-title {
  font-size: 36rpx;
  font-weight: 400;
  line-height: 50rpx;
  color: #fff;
}

.icon-earth {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
}

.songlist-desc {
  font-size: 28rpx;
  align-items: center;
  color: rgba(255, 255, 255, 0.6);
}

.songlist-singer {
  display: inline-block;
}

.songlist-singer text:not(:first-of-type):before {
  content: '/';
  margin: 0 8rpx;
}

/* 标签 */

.songlist-tit {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
}

.songlist-tags__list {
  display: flex;
  margin: 0 30rpx 30rpx;
  justify-content: center;
}

.songlist-tags__list .tag-item {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  margin: 0 10rpx 20rpx;
  font-size: 28rpx;
  border: 1px solid #fff;
  border-radius: 30rpx;
  color: #fff;
}

/* 简介 */

.songlist_summary {
  display: flex;
  margin: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
}
