page{
    display:flex;
    flex-direction: column;
    height: 100%;
}
.song-wrap {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    margin-bottom: 0;
    overflow: hidden;
}

.song-main {
    position: absolute;
    bottom: 0;
    top: 0;
    width: 100%;
    z-index: 2;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.song-info {
    flex: none;
    padding: 30rpx;
    display: flex;
    height: 220rpx;
    background: rgba(0, 0, 0, 0.1);
    box-sizing: border-box;
    width: 100%;
    justify-content: space-between;
    align-items: center;
}

.avatar-img {
    flex: 0 0 160rpx;
    margin-right: 30rpx;
    width: 160rpx;
    height: 160rpx;
}

.song-info__con {
    color: #fff;
    width: 60%;
}

.song-name {
    display: block;
    font-size: 36rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.singer-name {
    display: block;
    font-size: 28rpx;
    position: relative;
}

.singer-name__text:not(:first-of-type):before {
    content: '/';
    margin: 0 8rpx;
    color: #fff;
}

.play {
    flex: 0 0 86rpx;
    width: 86rpx;
    height: 86rpx;
    margin-left: 20rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.play.pause {
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}


/* 歌词部分 */

.song-lyric {
    position: relative;
    flex: 1;
}

.song-lyric__swiper {
    display: flex;
    flex: 1;
    height: 1000rpx;
    width: 100%;
    text-align: center;
}

.song-lyric__swiper .swiper-item {
    display: flex;
    justify-content: center;
    align-items: center;
}


/* 旋转图片 */

.song-lyric .album-img {
    display: block;
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    animation: rotate 10s linear infinite;
}

.song-lyric .album-img.pause {
    animation-play-state: paused;
}


/* swiper 小点*/

.song-lyric .swipe-btn-wrapper {
    position: absolute;
    left: 0;
    bottom: -30rpx;
    z-index: 20;
    width: 100%;
    text-align: center;
    height: 10rpx;
    line-height: 10rpx;
}

.song-lyric .swipe-btn-wrapper .swipe-btn-list {
    display: flex;
    justify-content: center;
    align-items: center;
}

.song-lyric .swipe-btn-wrapper .swipe-btn-list view {
    width: 12rpx;
    height: 12rpx;
    background-color: #ccc;
    border-radius: 50%;
    margin: 0 10rpx;
}

.song-lyric .swipe-btn-wrapper .swipe-btn-list view.on {
    background-color: #31c27c;
}


/* 歌词列表 */

.song-lyric__swiper .lyric-item {
    color: #ccc;
    height: 80rpx;
    font-size: 28rpx;
    line-height: 1;
}


/*播放队列*/

.songlists-tit {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 110rpx;
    text-align: center;
    font-size: 32rpx;
    color: #ccc;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.songlists-count {
    margin-left: 10px;
    color: rgba(255, 255, 255, 0.5);
}

.songlists-item {
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    height: 90rpx;
    line-height: 1;
    margin: 0 60rpx 0 30rpx;
    font-size: 32rpx;
    color: #ccc;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.play-list__song {
    display: block;
    max-width: 45%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.play-list__line {
    display: inline-block;
    margin: 0 10rpx;
    color: rgba(255, 255, 255, 0.5);
}

.play-list__singer {
    display: block;
    max-width: 45%;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.5);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.play-list__singer text:not(:first-of-type):before {
    content: '/';
    margin: 0 8rpx;
}

.songlists-item__current .play-list__song,
.songlists-item__current .play-list__line,
.songlists-item__current .play-list__singer {
    color: #31c27c;
}

.ani_playing {
    position: absolute;
    top: 34rpx;
    right: 50rpx;
    width: 20rpx;
    height: 24rpx;
    overflow: hidden;
    transform-style: preserve-3d;
}

.ani_playing text {
    display: inline-block;
    width: 2rpx;
    height: 24rpx;
    margin-right: 4rpx;
    background-color: #31c27c;
}

.ani_playing text:nth-of-type(4) {
    margin-right: 0;
}

.ani_playing text {
    animation-name: bounce;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

.ani_playing text:nth-of-type(1) {
    animation-duration: 400ms;
}

.ani_playing text:nth-of-type(2) {
    animation-duration: 600ms;
}

.ani_playing text:nth-of-type(3) {
    animation-duration: 700ms;
}

.ani_playing text:nth-of-type(4) {
    animation-duration: 500ms;
}

@keyframes bounce {
    0% {
        -webkit-transform: translate3d(0, 24rpx, 0);
    }
    100% {
        -webkit-transform: translate3d(0, 0, 0);
    }
}


/* 控制条 */

.song-control {
    padding: 30rpx 0;
    height: 140rpx;
    box-sizing: border-box;
}

.song-control .progress {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.progress .time-start,
.progress .time-total {
    flex: 0 0 110rpx;
    color: #808080;
    width: 110rpx;
    text-align: center;
    font-size: 24rpx;
}

.progress .time-bar {
    position: relative;
    flex: auto;
    height: 4rpx;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.2);
}

.progress .time-bar .time-play {
    position: absolute;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    background: #31c27c;
    transition: all 1s linear;
}


/* 滤镜背景 */

.song-bg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-position: center;
    background-size: cover;
    filter: blur(30rpx);
    transform: scale(1.15);
}

.song-bg:after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.6);
}