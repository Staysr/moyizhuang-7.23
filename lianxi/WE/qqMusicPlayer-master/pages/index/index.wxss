page {
    height: 100%;
}

.navbar {
    display: flex;
    background: #fff;
    height: 80rpx;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    color: #31c27c;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #31c27c;
}


/*推荐*/


/* swiper轮播 */

.recommend .swiper {
    height: 300rpx;
}

.recommend .swiper .img {
    width: 100%;
    height: 100%;
}

.wx-swiper-dot::before {
    color: #fff;
}

.wx-swiper-dot-active::before {
    color: green;
}


/* 电台 */

.recommend .channel {
    margin: 30rpx 20rpx;
}

.recommend .channel .title {
    display: flex;
    margin-bottom: 20rpx;
}

.recommend .channel .list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.recommend .channel .list .item {
    background: #fff;
}

.recommend .channel .list .item .img {
    position: relative;
    vertical-align: top;
    width: 350rpx;
    height: 350rpx;
}

.recommend .channel .list .item .list-media {
    position: relative;
    width: 350rpx;
    height: 350rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.recommend .channel .list .item .list-media:after {
    content: '';
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    width: 48rpx;
    height: 48rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.recommend .channel .list .item .list-media .list-count {
    position: absolute;
    left: 10rpx;
    bottom: 10rpx;
    font-size: 24rpx;
    color: #fff;
    z-index: 10;
}

.recommend .channel .list .item .list-media .list-count:before {
    display: inline-block;
    margin-right: 6rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.recommend .channel .list .item .text {
    display: block;
    padding: 10rpx 14rpx;
    font-size: 28rpx;
    width: 322rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.recommend .channel .list .songitem {
    margin-bottom: 20rpx;
}

.recommend .channel .list .author {
    display: block;
    padding: 0rpx 14rpx 10rpx;
    font-size: 24rpx;
}


/* 排行榜 */


/*排行榜*/

.topList {
    margin: 20rpx;
}

.topList .item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
    background: #fff;
}

.topList .media {
    flex: 0 0 200rpx;
    position: relative;
    width: 200rpx;
    height: 200rpx;
}

.topList .media .img {
    width: 100%;
    height: 100%;
}

.topList .media .count {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #fff;
    opacity: 0.6;
}

.topList .media .count:before {
    display: inline-block;
    margin-right: 6rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.topList .info {
    flex: auto;
    margin-left: 30rpx;
    overflow: hidden;
}

.topList .info .title {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
    margin-bottom: 10rpx;
}

.topList .info .text {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.5);
}

.topList .info .text text {
    color: #000;
    margin-left: 16rpx;
    margin-right: 10rpx;
}

.topList .arrow {
    flex: 0 0 12rpx;
    margin-right: 20rpx;
    width: 12rpx;
    height: 12rpx;
    border-right: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
    transform: rotate(-45deg);
}


/*搜索*/

.search {
    display: flex;
    flex-direction: column;
    height: 93.5%;
    background: #fff;
}

.search .search-bar {
    position: relative;
    padding: 16rpx 20rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #efeff4;
}

.search .search-wrap {
    position: relative;
    flex: auto;
    border-radius: 10rpx;
    background: #fff;
    border: 1rpx solid #e6e6ea;
}

.search .search-box {
    position: relative;
    display: flex;
    box-sizing: border-box;
}

.search .icon-search {
    margin: 16rpx 16rpx 16rpx 20rpx;
}

.search .search-input {
    flex: 1;
    padding-top: 6rpx;
    padding-bottom: 6rpx;
    padding-right:  60rpx;
    font-size: 28rpx;
    height: 56rpx;
    line-height: 56rpx;
}

input::-webkit-input-placeholder {
    color: rgb(117, 117, 117);
}

.search .icon-clear {
    position: absolute;
    top: 12rpx;
    right: 16rpx;
}

.search .cancel-btn {
    margin-left: 20rpx;
    line-height: 70rpx;
    color: #09bb07;
    white-space: nowrap;
    font-size: 28rpx;
    box-sizing: border-box;
}


/* 热门搜索 */

.search-hot {
    padding: 30rpx;
}

.search-hot .hot-title {
    display: block;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 16rpx;
}

.search-hot .hot-wrap {
    font-size: 0;
}

.search-hot .hot-item {
    display: inline-block;
    font-size: 14px;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #000;
    border: 2rpx solid rgba(0, 0, 0, 0.6);
    border-radius: 28rpx;
    word-break: keep-all;
    margin-bottom: 20rpx;
    margin-right: 28rpx;
}

.search-hot .hot-item.hot {
    color: #fc4524;
    border-color: #fc4524;
}


/* 搜索历史 */


.search-history .search-record {
    background: #fff;
}

.search-history .record-item {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #ededed;
}

.search-history .icon-time {
    padding: 16rpx 16rpx 16rpx 0;
}

.search-history .record_con {
    flex: 1;
    display: block;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-history .icon-close {
    padding: 16rpx 0 16rpx 16rpx;
}
.record_handle{
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #47c88a;
}


/*搜索结果*/

.search-result {
    flex: auto;
    position: relative;
}

.search-result scroll-view {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
}

.result-item {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0 20rpx 110rpx;
    overflow: hidden;
    border-bottom: 2rpx solid #e5e5e5;
}

.result-item .icon {
    position: absolute;
    top: 36rpx;
    left: 36rpx;
    width: 44rpx;
    height: 40rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.result-item .icon.nocopyright:after {
    content: '';
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    bottom: 0;
    right: -2rpx;
    background: #fff url(data:image/png;base64,) no-repeat;
    background-size: contain;
}

.result-item .media {
    position: absolute;
    left: 16rpx;
    top: 16rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 999rpx;
}

.result-item .title,
.result-item .subtitle {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 36rpx;
}

.result-item .title {
    margin-bottom: 4rpx;
    color: #000;
}

.result-item .subtitle {
    color: #808080;
    font-size: 24rpx;
}

.result-item:first-child .subtitle text {
    margin-right: 20rpx;
}

.result-item:not(:first-child) .subtitle text:not(:first-child):before {
    content: '/';
    margin: 0 8rpx;
}

.loading {
    padding: 10rpx;
    text-align: center;
}

.loading:before {
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background: url(https://imgcache.gtimg.cn/mediastyle/mobile/app/qq/img/icon_loading.png?max_age=19830212&d=20151105145423) no-repeat;
    background-size: contain;
    animation: rotate 1s linear infinite;
}

.loading.complete:before {
    display: none;
}
.backToTop{
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100rpx 100rpx;
}