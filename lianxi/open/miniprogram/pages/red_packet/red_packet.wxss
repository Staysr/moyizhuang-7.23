/* pages/red_packet/red_packet.wxss */


page{background-color: #fff;}
.center{width:270px;height:350px;margin: 0 auto;box-shadow:  1px 1px 2px 2px #EFEFEF;border-radius: 10px;position: relative;top:75px;}
.portrait{width: 70px;height:70px;border-radius: 50%;position:absolute;top:-44px;left:38%;text-align: center;}
.portrait image{width:60px;height:60px;vertical-align: middle;border-radius: 50%;margin-top:5px;}
ul{margin-top: 78px;}
.input{display: flex;flex-flow: rou nowrap;justify-content: start;align-items: center;margin-bottom: 30px;}
.input_all{padding: 40px 20px 0 20px;}
.input>text{font-size: 15px;color:#333;width: 27%; text-align-last: justify;margin-right: 15px}
.input>input{border-bottom: 1px solid #eee;font-size: 12px;width: 67%;}
.but{width:180px;height: 30px;border-radius: 15px;background-color: #FE6347;text-align: center;line-height: 30px;color: #fff;margin:0 auto;margin-top:40px;}
.record{margin: 0 auto;margin-top:16px;color:#34A4E4;font-size: 12px;text-align: center}
.back{position: fixed;top:-20px;left:0;height:100vh;width:100%;background-color:red;background: rgba(0,0,0,0.4);z-index: 1000;}
.back_center{width:250px;height: 350px;margin:0 auto;margin-top:86px;position:relative;}
.back_img{width:250px;height: 350px;}
.back_div{width:250px;height: 350px;position: absolute;left:0;top:0;text-align: center;margin: 0 auto;padding: 0 20px;box-sizing:border-box;}
.cancel{width:14px;height:14px;position:absolute;top:5px;right: 5px;}
.back_header{width:40px;height: 40px;margin: 10px 0;margin-top:20px;}
.back_title{margin: 0 auto;font-size: 12px;color:#FFE6B8;text-align: center;width: 100%;margin-bottom: 15px;}
.prompt{font-size: 15px;color:#FFE6B8;text-align: center;font-weight: bold;width: 200px;margin: 0 auto;margin-bottom: 20px;}
.share{width:80px;height: 80px;margin:0 auto;}
.share >image{width:80px;height: 80px;border-radius: 50%;margin-bottom: 70px;}
.back_but{width:100px;height: 30px;border-radius: 15px;background-color:#FFE6B8;text-align: center;line-height: 30px;margin:45px auto 0 auto;font-size: 12px;color:#333;}
.guize{width:270px ;padding: 60px 20px 0 0 ;}
.ne{color:#666; font-size:12px;text-align:left;padding: 5px 20px 0 0 ;}

.imagePathBox{
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.7);
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:999999;
}
.share_top{
  width:100%;
  height:40px;
  line-height:40px;
  background:#f7f7f7;
  color:#353535;
  font-size:15px;
  padding-left:10px;
  position:relative;
}
.share_bottom{
  font-size:10px;
  color:#353535;
  position:absolute;
  bottom:10px;
  text-align:center;
  width:100%;
}
.shengcheng{
  width:60%;
  height:60%;
  position:fixed;
  bottom:15%;
  left:50%;
  margin-left:-30%;
  z-index:999;
  -webkit-box-shadow: #666 0px 0px 10px;
  -moz-box-shadow: #666 0px 0px 10px;
  box-shadow: #666 0px 0px 10px;
}
.images_bg{
  width:100%;
  height:85%;
  background:#fff;
  position:fixed;
  bottom:0;
}
.close_share{
  top:0;
  right:25px;
  z-index:999;
  color:#a2a2a2;
  position:absolute;
  width:50px;
  text-align:right;
  font-size:19px;
}
.baocun{
  display:block;
  width:80%;
  height:80rpx;
  padding:0;
  line-height:80rpx;
  text-align:center;
  position:fixed;
  bottom:70rpx;
  left:10%;
  color:#fff;
  font-size:32rpx;
  border-radius:10rpx;
}
button::after{border:0;}
button[class="baocun"]::after{
  border: 0;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
  padding-bottom:30px;
}

.drawer_attr_share {
  width:100%;
  height:30%;
  position:fixed;
  bottom:0;
  left:0;
  z-index:2000;
   background:#fafafa; 
  opacity:1;
}
.sp_text{
    display:flex;
    line-height: 20px;
    width: 100%;
    text-align: left;
    padding-left:8px;
}
.sp_tit{
    width: 100%;
    overflow: hidden;
    font-size: 13px;
    -webkit-line-clamp:2;
}
.sp_jg{
    width: 30%;
    overflow: hidden;
    font-size: 13px;
    color: #fc0628;
}
.guige{
    font-size:13px;
    color:#808080;
    text-align:right;
    padding-right:10px;
}
.fx_box{
    display:flex;
    align-items:30%;
    justify-content:space-around;
    margin:auto;
    padding:5%;
}
.fx_img{
  width: 50px;
  height: 50px; 
  margin: 10px;
}
.fx_img_box{
  text-align: center;
  font-size:12px;
}
.fx_text{
  text-align:center;
  color:#666;
  line-height: 30px;
}
.button-hover{
  background:#fafafa; 
}
@media screen and (min-height: 700px) {
  .shengcheng {
    width:60%;
    height:50%;
    position:fixed;
    bottom:15%;
    left:50%;
    margin-left:-30%;
    z-index:999;
    -webkit-box-shadow:#666 0px 0px 10px;
    -moz-box-shadow:#666 0px 0px 10px;
    box-shadow:#666 0px 0px 10px;
  }
  .images_bg {
    width:100%;
    height:76%;
    background:#fff;
    position:fixed;
    bottom:0;
  }

}
